{
  "name": "todo-fullstack",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18.17 <21"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma db push && next build",
    "build:static": "next build && next export",
    "mobile:init": "cap init ToDoListApp com.example.todolist --web-dir=out || true",
    "mobile:sync": "npm run build:static && cap sync",
    "mobile:ios": "npm run mobile:sync && cap open ios",
    "mobile:android": "npm run mobile:sync && cap open android",
    "start": "next start",
  "start:prod": "(npx prisma migrate deploy || npx prisma db push || true) && npx prisma generate && next start -p ${PORT:-3000} -H 0.0.0.0",
    "lint": "next lint",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:push": "prisma db push",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "@capacitor/android": "^6.1.2",
    "@capacitor/core": "^6.1.2",
    "@capacitor/ios": "^6.1.2",
    "next": "14.2.5",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@capacitor/cli": "^6.1.2",
    "@types/node": "24.4.0",
    "@types/react": "19.1.13",
    "autoprefixer": "^10.4.20",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.5",
    "postcss": "^8.4.49",
    "prisma": "^5.19.1",
    "tailwindcss": "^3.4.10",
    "typescript": "5.5.4"
  }
}
